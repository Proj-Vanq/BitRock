    <readyToInstallActionList>
        <setInstallerVariable>
            <name>project.installationType</name>
            <value>upgrade</value>
            <ruleList>
                <fileExists>
                    <path>${installdir}/</path>
                </fileExists>
            </ruleList>
        </setInstallerVariable>
    </readyToInstallActionList>
    <postInstallationActionList>
        <showProgressDialog>
            <explanation>Downloading Required Files...</explanation>
            <title>Downloading Maps...</title>
            <actionList>
                <readFile>
                    <name>maplist</name>
                    <path>${installdir}/main/maplist</path>
                </readFile>
                <setInstallerVariable>
                    <name>mapCount</name>
                    <value>0</value>
                </setInstallerVariable>
                <foreach>
                    <values>${maplist}</values>
                    <variables>map</variables>
                    <actionList>
                        <mathExpression>
                            <abortOnError>0</abortOnError>
                            <showMessageOnError>0</showMessageOnError>
                            <text>${mapCount} + 1</text>
                            <variable>mapCount</variable>
                        </mathExpression>
                        <if>
                            <actionList>
                                <showProgressDialog>
                                    <abortOnError>0</abortOnError>
                                    <title>Downloading [${mapCount}/24] ${map}...</title>
                                    <actionList>
                                        <httpGet>
                                            <abortOnError>0</abortOnError>
                                            <filename>${installdir}/main/${map}</filename>
                                            <progressText>Downloading Map [${mapcount}/24]</progressText>
                                            <url>http://sourceforge.net/projects/unvanquished/files/Assets/${map}</url>
                                        </httpGet>
                                    </actionList>
                                </showProgressDialog>
                            </actionList>
                            <conditionRuleList>
                                <fileExists>
                                    <negate>1</negate>
                                    <path>${installdir}/main/${map}</path>
                                </fileExists>
                            </conditionRuleList>
                        </if>
                    </actionList>
                </foreach>
            </actionList>
            <ruleList>
                <isTrue>
                    <value>${project.component(Assets).selected}</value>
                </isTrue>
                <isTrue>
                    <value>${project.component(Assets).component(Maps).selected}</value>
                </isTrue>
                <platformTest>
                    <negate>1</negate>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </showProgressDialog>
        <showProgressDialog>
            <explanation>Downloading Required Files...</explanation>
            <title>Downloading Asset Paks...</title>
            <actionList>
                <readFile>
                    <name>paklist</name>
                    <path>${installdir}/main/paklist</path>
                </readFile>
                <setInstallerVariable>
                    <name>pakCount</name>
                    <value>0</value>
                </setInstallerVariable>
                <foreach>
                    <values>${paklist}</values>
                    <variables>pak</variables>
                    <actionList>
                        <mathExpression>
                            <text>${pakCount} + 1</text>
                            <variable>pakCount</variable>
                        </mathExpression>
                        <if>
                            <actionList>
                                <showProgressDialog>
                                    <title>Downloading [${pakCount}/6] ${pak}...</title>
                                    <actionList>
                                        <httpGet>
                                            <filename>${installdir}/main/${pak}</filename>
                                            <progressText>Downloading Map [${pakcount}/5]</progressText>
                                            <url>http://sourceforge.net/projects/unvanquished/files/Assets/${pak}</url>
                                        </httpGet>
                                    </actionList>
                                </showProgressDialog>
                            </actionList>
                            <conditionRuleList>
                                <fileExists>
                                    <negate>1</negate>
                                    <path>${installdir}/main/${pak}</path>
                                </fileExists>
                            </conditionRuleList>
                        </if>
                    </actionList>
                </foreach>
            </actionList>
            <ruleList>
                <isTrue>
                    <value>${project.component(Assets).selected}</value>
                </isTrue>
                <isTrue>
                    <value>${project.component(Assets).component(gpaks).selected}</value>
                </isTrue>
                <platformTest>
                    <negate>1</negate>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </showProgressDialog>
        <showProgressDialog>
            <explanation>Downloading Required Files...</explanation>
            <title>Downloading Maps...</title>
            <actionList>
                <readFile>
                    <name>maplist</name>
                    <path>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/maplist</path>
                </readFile>
                <setInstallerVariable>
                    <name>mapCount</name>
                    <value>0</value>
                </setInstallerVariable>
                <foreach>
                    <values>${maplist}</values>
                    <variables>map</variables>
                    <actionList>
                        <mathExpression>
                            <text>${mapCount} + 1</text>
                            <variable>mapCount</variable>
                        </mathExpression>
                        <if>
                            <actionList>
                                <showProgressDialog>
                                    <title>Downloading [${mapCount}/24] ${map}...</title>
                                    <actionList>
                                        <httpGet>
                                            <filename>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/${map}</filename>
                                            <progressText>Downloading Map [${mapcount}/24]</progressText>
                                            <url>http://sourceforge.net/projects/unvanquished/files/Assets/${map}</url>
                                        </httpGet>
                                    </actionList>
                                </showProgressDialog>
                            </actionList>
                            <conditionRuleList>
                                <fileExists>
                                    <negate>1</negate>
                                    <path>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/${map}</path>
                                </fileExists>
                            </conditionRuleList>
                        </if>
                    </actionList>
                </foreach>
            </actionList>
            <ruleList>
                <isTrue>
                    <value>${project.component(Assets).selected}</value>
                </isTrue>
                <isTrue>
                    <value>${project.component(Assets).component(Maps).selected}</value>
                </isTrue>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </showProgressDialog>
        <showProgressDialog>
            <explanation>Downloading Required Files...</explanation>
            <title>Downloading Asset Paks...</title>
            <actionList>
                <readFile>
                    <name>paklist</name>
                    <path>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/paklist</path>
                </readFile>
                <setInstallerVariable>
                    <name>pakCount</name>
                    <value>0</value>
                </setInstallerVariable>
                <foreach>
                    <values>${paklist}</values>
                    <variables>pak</variables>
                    <actionList>
                        <mathExpression>
                            <text>${pakCount} + 1</text>
                            <variable>pakCount</variable>
                        </mathExpression>
                        <if>
                            <actionList>
                                <showProgressDialog>
                                    <title>Downloading [${pakCount}/6] ${pak}...</title>
                                    <actionList>
                                        <httpGet>
                                            <filename>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/${pak}</filename>
                                            <progressText>Downloading Map [${pakcount}/5]</progressText>
                                            <url>http://sourceforge.net/projects/unvanquished/files/Assets/${pak}</url>
                                        </httpGet>
                                    </actionList>
                                </showProgressDialog>
                            </actionList>
                            <conditionRuleList>
                                <fileExists>
                                    <negate>1</negate>
                                    <path>${installdir}/Unvanquished.app/Contents/Resources/Unvanquished/main/${pak}</path>
                                </fileExists>
                            </conditionRuleList>
                        </if>
                    </actionList>
                </foreach>
            </actionList>
            <ruleList>
                <isTrue>
                    <value>${project.component(Assets).selected}</value>
                </isTrue>
                <isTrue>
                    <value>${project.component(Assets).component(gpaks).selected}</value>
                </isTrue>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </showProgressDialog>
        <showQuestion>
            <default>yes</default>
            <explanation>Old vms load old data and may potentially lead to crashes.</explanation>
            <text>Delete old vms pk3s from fs_homepath</text>
            <variable>deleteoldvms</variable>
        </showQuestion>
        <if>
            <actionList>
                <deleteFile>
                    <abortOnError>0</abortOnError>
                    <path>~/.Unvanquished/main/vms-*.pk3</path>
                    <ruleList>
                        <platformTest>
                            <type>linux</type>
                        </platformTest>
                    </ruleList>
                </deleteFile>
                <deleteFile>
                    <abortOnError>0</abortOnError>
                    <path>%APPDATA%\main\vms-*.pk3</path>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </deleteFile>
                <deleteFile>
                    <abortOnError>0</abortOnError>
                    <path>~/Library/Application Support/Unvanquished/main/vms-*.pk3</path>
                    <ruleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </deleteFile>
            </actionList>
            <conditionRuleList>
                <isTrue>
                    <value>${deleteoldvms}</value>
                </isTrue>
            </conditionRuleList>
        </if>
    </postInstallationActionList>
    <postUninstallerCreationActionList>
        <renameFile>
            <abortOnError>0</abortOnError>
            <destination>${installdir}/Uninstall Unvanquished.app</destination>
            <origin>${installdir}/uninstall.app</origin>
            <showMessageOnError>0</showMessageOnError>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
                <fileExists>
                    <negate>1</negate>
                    <path>${installdir}/Uninstall Unvanquished.app</path>
                </fileExists>
            </ruleList>
        </renameFile>
    </postUninstallerCreationActionList>
    <allowComponentSelection>1</allowComponentSelection>
    <componentsDirectory>components/${project.shortName}-${project.version}</componentsDirectory>
    <componentsDownloadDirectory>${components_download_directory}</componentsDownloadDirectory>
    <componentsUrl>${components_download_url}</componentsUrl>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableDebugger>1</enableDebugger>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Unvanquished Development</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${default_install_path}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
            <preShowPageActionList>
                <if>
                    <actionList>
                        <setInstallerVariable>
                            <name>default_install_path</name>
                            <value>${platform_install_prefix}/</value>
                        </setInstallerVariable>
                    </actionList>
                    <conditionRuleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </conditionRuleList>
                    <elseActionList>
                        <setInstallerVariable>
                            <name>default_install_path</name>
                            <value>${platform_install_prefix}/${product_shortname}</value>
                        </setInstallerVariable>
                    </elseActionList>
                </if>
            </preShowPageActionList>
        </directoryParameter>
    </parameterList>
</project>

