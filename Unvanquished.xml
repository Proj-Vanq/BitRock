            <folderList>
                <folder>
                    <description>Daemon Engine</description>
                    <destination>${installdir}</destination>
                    <name>core_linuxamd64</name>
                    <platforms>linux-x64</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <allowWildcards>1</allowWildcards>
                            <origin>../../../tmp/unv64/*</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>unvanquishd.png</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Daemon Engine</description>
                    <destination>${installdir}</destination>
                    <name>core_win</name>
                    <platforms>windows</platforms>
                    <actionList>
                        <registrySet>
                            <key>HKEY_CLASSES_ROOT\unv</key>
                            <name></name>
                            <type>REG_SZ</type>
                            <value>URL: Unvanquished Protocol</value>
                        </registrySet>
                        <registrySet>
                            <key>HKEY_CLASSES_ROOT\unv\DefaultIcon</key>
                            <name></name>
                            <type>REG_SZ</type>
                            <value>${installdir}/Daemon.exe,1</value>
                        </registrySet>
                        <registrySet>
                            <key>HKEY_CLASSES_ROOT\unv</key>
                            <name>URL Protocol</name>
                            <type>REG_SZ</type>
                            <value></value>
                        </registrySet>
                        <registrySet>
                            <key>HKEY_CLASSES_ROOT\unv\shell\open\command</key>
                            <name></name>
                            <type>REG_SZ</type>
                            <value>"${installdir}/Daemon.exe" +set fs_basepath "${installdir}" +connect "%1"</value>
                        </registrySet>
                    </actionList>
                    <distributionFileList>
                        <distributionFile>
                            <allowWildcards>1</allowWildcards>
                            <origin>tmp/win32/*</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>unvanquished.ico</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Daemon Engine</description>
                    <destination>${installdir}</destination>
                    <name>core_osx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <allowWildcards>1</allowWildcards>
                            <origin>tmp/OSX/*</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Daemon Engine</description>
                    <destination>${installdir}</destination>
                    <name>core_linux32</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../home/modi/unv/installerfiles/unvanquished.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <allowWildcards>1</allowWildcards>
                            <origin>../../../home/modi/unv/installerfiles/linux32/*</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Protocol URI</description>
                    <destination>${user_home_directory}/.local/share/applications</destination>
                    <name>proto_linux</name>
                    <platforms>linux</platforms>
                    <actionList>
                        <iniFileSet>
                            <file>${user_home_directory}/.local/share/applications/unvanquished.desktop</file>
                            <key>Exec</key>
                            <section>Desktop Entry</section>
                            <value>${installdir}/unvanquished</value>
                            <ruleList>
                                <platformTest>
                                    <type>linux</type>
                                </platformTest>
                            </ruleList>
                        </iniFileSet>
                        <iniFileSet>
                            <file>${user_home_directory}/.local/share/applications/unvanquished.desktop</file>
                            <key>Icon</key>
                            <section>Desktop Entry</section>
                            <value>${installdir}/unvanquished.png</value>
                        </iniFileSet>
                    </actionList>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../home/modi/unv/installerfiles/unvanquished.desktop</origin>
                        </distributionFile>
                    </distributionFileList>
                    <ruleList>
                        <platformTest>
                            <type>linux</type>
                        </platformTest>
                    </ruleList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Play Unvanquished</comment>
                    <name>Unvanquished</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/Daemon.exe</windowsExec>
                    <windowsExecArgs>+set cl_renderer GL3,GL</windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
